<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="fas fa-users"> Usuarios</i>
        </h3>
    </div>
<div class="card-body">
    <table class="table">
        <thead class="thead-dark">
            <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Cargo</th>
            <th scope="col">Correo</th>
            <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each mostrarDatos}}
            <tr>
                
                <td>{{this.nombre}}</td>
                <td>{{this.apellido}}</td>
                <td>{{this.info.profession}}</td>
                <td>{{this.email}}</td>
                <td>
                    <div class="row">
                            <a class="btn btn-light" data-toggle="modal" data-target="#exampleModal" id="modalVer" 
                              onclick="ver({nombre:'{{this.nombre}}',profesion:'{{info.profession}}',edad:'{{this.edad}}',
                              direccion : '{{info.address}}', telefono: '{{this.phone}}', email:'{{this.email}}', url_image: '{{url_image}}',
                              skill:{nodeJs:`{{this.skill.NodeJS}}`,JQuery:`{{this.skill.JQuery}}`,Ionic:`{{this.skill.Ionic}}`,Postgres:`{{this.skill.Postgres}}`,
                              }})">
                              <i class="fas fa-eye"></i>
                              </a>
                            <button class="btn btn-light"><i class="far fa-edit"></i></button>
                            <button class="btn btn-light"><i class="fas fa-trash-alt"></i></button>                   
                    </div>
                </td>
                
            </tr>
             {{/each}}
        </tbody>
    </table>
</div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
              <img id="imgPerfil" src="" alt="">
          </div>
          <div class="col-md-8">
              <h1><label for="Nombre" id="lblNombre"></label></h1>
              Profesión: <label for="Nombre" id="lblProfesion"></label></br>
              Edad: <label for="Nombre" id="lblEdad"></label></br>
              Dirección: <label for="Nombre" id="lblDireccion"></label></br>
              Telefono: <label for="Nombre" id="lblTelefono"></label></br>
              Email: <label for="Nombre" id="lblEmail"></label></br>
          </div>
           <div class="container">
              <canvas id="myChart"></canvas>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>